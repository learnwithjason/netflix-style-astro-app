---
import type { z } from 'astro/zod';
import { EpisodeFields } from '../../db/schema';
import { format } from 'date-fns';

export interface Props {
	episode: z.infer<typeof EpisodeFields>;
	episodeUrl: string;
	episodeNumber: string;
	class?: string;
}

const { class: className, episode, episodeUrl, episodeNumber } = Astro.props;
---

<div class:list={['episode', className]}>
	<a href={episodeUrl}>
		<img src={episode.thumbnail} alt={episode.title} />
	</a>
	<div class="episode-meta">
		<span class="episode-number">
			{episodeNumber}
		</span>
		<span class="episode-date">
			{format(episode.publish_date, 'MMM d, yyyy')}
		</span>
		{/* TODO: fix hard-coded date */}
		<span class="episode-length">3m</span>
	</div>
	<h2>
		<a href={episodeUrl}>
			{episode.title}
		</a>
	</h2>
	<p>{episode.description}</p>
</div>

<style>
	.episode {
		display: block;
		inline-size: 170px;

		& img {
			border-radius: 0.25rem;
			inline-size: 100%;
			display: block;
		}

		& h2 {
			font-family: mallory-medium;
			font-size: 0.875rem;
			line-height: 1.1;
			margin-block: 0.25rem;

			.compact & {
				font-size: 0.75rem;
			}

			& a {
				color: inherit;
				text-decoration: none;

				&:focus-visible,
				&:hover {
					text-decoration: underline;
				}
			}
		}

		& p {
			font-size: 0.75rem;
			line-height: 1.25;
		}
	}

	.episode-meta {
		display: flex;
		font-family: mallory-light;
		font-size: 0.75rem;
		gap: 0.5rem;
		margin-block-start: 0.25rem;
	}

	.episode-number {
		font-family: mallory-medium;
		text-transform: uppercase;
	}

	.episode-date {
	}

	.episode-length {
		margin-inline-start: auto;
	}
</style>
