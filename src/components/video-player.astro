---
export interface Props {
	playbackId: string;
	title: string;
}

const { playbackId, title } = Astro.props;
---

<mux-player
	theme="classic"
	playback-id={playbackId}
	metadata-video-title={title}
	title={title}></mux-player>

<script>
	import '@mux/mux-player';
	import '@mux/mux-player/themes/classic';
</script>

<style>
	mux-player {
		block-size: 85dvb;
		inline-size: 100dvi;
	}
</style>
