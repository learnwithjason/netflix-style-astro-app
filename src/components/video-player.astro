---
import type { z } from 'astro/zod';
import type { EpisodeFields } from '../../db/schema';

export interface Props {
	episode: z.infer<typeof EpisodeFields>;
}

const { episode } = Astro.props;
---

<mux-player
	theme="classic"
	playback-id={episode.playback_id}
	metadata-video-title={episode.title}
	title={episode.title}></mux-player>

<script>
	import '@mux/mux-player';
	import '@mux/mux-player/themes/classic';
</script>

<style>
	mux-player {
		block-size: 100dvb;
		inline-size: 100dvi;
	}
</style>
